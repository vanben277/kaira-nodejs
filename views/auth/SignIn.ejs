<!DOCTYPE html>
<html lang="vi">
  <head>
    <title>Đăng nhập</title>
    <%- include('../partials/user/Head') %>
  </head>

  <body
    class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
  >
    <%- include('../partials/user/SVGIcon') %>

    <div class="max-w-md w-full">
      <div class="text-center mb-8">
        <h2 class="text-4xl font-marcellus text-gray-900 mb-2">Đăng nhập</h2>
        <p class="text-gray-600 text-sm">Chào mừng bạn quay trở lại</p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 space-y-6">
        <div
          id="server-message"
          class="hidden px-4 py-3 rounded-lg text-sm"
          role="alert"
        ></div>

        <form id="loginForm" class="space-y-5">
          <div>
            <label
              for="email-address"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Địa chỉ email <span class="text-red-500">*</span>
            </label>
            <input
              id="email-address"
              name="email"
              type="email"
              autocomplete="email"
              class="block w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition duration-200"
              placeholder="example@email.com"
            />
            <p id="email-error" class="mt-1 text-sm text-red-500 hidden"></p>
          </div>

          <div class="relative">
            <label
              for="password"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Mật khẩu <span class="text-red-500">*</span>
            </label>

            <input
              id="password"
              name="password"
              type="password"
              autocomplete="current-password"
              class="block w-full px-4 py-3 pr-10 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition duration-200"
              placeholder="••••••••"
            />

            <button
              type="button"
              id="togglePassword"
              class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700 focus:outline-none border-none bg-transparent"
              style="top: 26px"
            >
              <svg
                id="eyeOpen"
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                />
              </svg>

              <svg
                id="eyeClosed"
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 hidden"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.969 9.969 0 012.642-4.362m3.514-2.096A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.542 7a9.955 9.955 0 01-4.2 5.223M3 3l18 18"
                />
              </svg>
            </button>

            <p id="password-error" class="mt-1 text-sm text-red-500 hidden"></p>
          </div>
          <div class="text-right">
            <a
              href="/auth/forgot-password"
              class="text-sm font-medium text-gray-600 hover:text-gray-900 transition duration-200"
            >
              Quên mật khẩu?
            </a>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full flex justify-center items-center py-3.5 px-4 bg-gray-900 hover:bg-gray-800 text-white font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition duration-200 transform hover:scale-[1.02] active:scale-[0.98]"
          >
            Đăng nhập
          </button>
        </form>

        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-gray-500">hoặc</span>
          </div>
        </div>

        <!-- Links -->
        <div
          class="flex flex-col sm:flex-row justify-between items-center gap-3 text-sm"
        >
          <a
            href="/"
            class="font-medium text-gray-600 hover:text-gray-900 transition duration-200 flex items-center gap-1"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"
              />
            </svg>
            Về trang chủ
          </a>
          <a
            href="/auth/signup"
            class="font-medium text-gray-600 hover:text-gray-900 transition duration-200"
          >
            Chưa có tài khoản? <span class="text-gray-900">Đăng ký</span>
          </a>
        </div>
      </div>
    </div>

    <%- include('../partials/user/Script') %>

    <script>
      $(document).ready(function () {
        const $form = $("#loginForm");
        const $emailInput = $("#email-address");
        const $emailError = $("#email-error");
        const $passwordInput = $("#password");
        const $passwordError = $("#password-error");
        const $serverMessage = $("#server-message");
        const $togglePassword = $("#togglePassword");
        const $eyeOpen = $("#eyeOpen");
        const $eyeClosed = $("#eyeClosed");

        $passwordInput.attr("type", "password");
        $eyeOpen.addClass("hidden");
        $eyeClosed.removeClass("hidden");

        $togglePassword.on("click", function () {
          const currentType = $passwordInput.attr("type");
          const isPassword = currentType === "password";

          $passwordInput.attr("type", isPassword ? "text" : "password");
          $eyeOpen.toggleClass("hidden", !isPassword);
          $eyeClosed.toggleClass("hidden", isPassword);
        });

        function validateEmail(email) {
          const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          return re.test(email);
        }

        function showError($input, $errorElement, message) {
          $input
            .removeClass("border-gray-300 focus:ring-gray-900")
            .addClass("border-red-500 focus:ring-red-500");
          $errorElement.text(message).removeClass("hidden");
        }

        function clearError($input, $errorElement) {
          $input
            .removeClass("border-red-500 focus:ring-red-500")
            .addClass("border-gray-300 focus:ring-gray-900");
          $errorElement.text("").addClass("hidden");
        }

        function showServerMessage(message, type = "error") {
          $serverMessage.text(message).removeClass("hidden");
          if (type === "success") {
            $serverMessage
              .removeClass("bg-red-100 text-red-700")
              .addClass("bg-green-100 text-green-700");
          } else {
            $serverMessage
              .removeClass("bg-green-100 text-green-700")
              .addClass("bg-red-100 text-red-700");
          }
        }

        function clearServerMessage() {
          $serverMessage.text("").addClass("hidden");
        }

        $emailInput.on("blur", function () {
          const email = $(this).val().trim();
          clearServerMessage();

          if (email === "") {
            showError($emailInput, $emailError, "Vui lòng nhập địa chỉ email");
          } else if (!validateEmail(email)) {
            showError($emailInput, $emailError, "Địa chỉ email không hợp lệ");
          } else {
            clearError($emailInput, $emailError);
          }
        });

        $emailInput.on("input", function () {
          if (
            $(this).val().trim() !== "" &&
            validateEmail($(this).val().trim())
          ) {
            clearError($emailInput, $emailError);
          }
        });

        $passwordInput.on("blur", function () {
          const password = $(this).val();
          clearServerMessage();

          if (password === "") {
            showError($passwordInput, $passwordError, "Vui lòng nhập mật khẩu");
          } else if (password.length < 6) {
            showError(
              $passwordInput,
              $passwordError,
              "Mật khẩu phải có ít nhất 6 ký tự"
            );
          } else {
            clearError($passwordInput, $passwordError);
          }
        });

        $passwordInput.on("input", function () {
          if ($(this).val().length >= 6) {
            clearError($passwordInput, $passwordError);
          }
        });

        $form.on("submit", function (e) {
          e.preventDefault();
          clearServerMessage();

          let isValid = true;
          const email = $emailInput.val().trim();
          const password = $passwordInput.val();

          if (email === "") {
            showError($emailInput, $emailError, "Vui lòng nhập địa chỉ email");
            isValid = false;
          } else if (!validateEmail(email)) {
            showError($emailInput, $emailError, "Địa chỉ email không hợp lệ");
            isValid = false;
          } else {
            clearError($emailInput, $emailError);
          }

          if (password === "") {
            showError($passwordInput, $passwordError, "Vui lòng nhập mật khẩu");
            isValid = false;
          } else if (password.length < 6) {
            showError(
              $passwordInput,
              $passwordError,
              "Mật khẩu phải có ít nhất 6 ký tự"
            );
            isValid = false;
          } else {
            clearError($passwordInput, $passwordError);
          }

          if (isValid) {
            const $submitBtn = $form.find('button[type="submit"]');
            const originalBtnText = $submitBtn.text();

            $submitBtn.prop("disabled", true).text("Đang đăng nhập...");

            $.ajax({
              url: "/auth/signin",
              method: "POST",
              contentType: "application/json",
              data: JSON.stringify({
                email,
                password,
              }),
              dataType: "json",
              success: function (data) {
                if (data.success) {
                  showServerMessage(data.message, "success");

                  const userRole = data.data.role;
                  const redirectUrl = userRole === "ADMIN" ? "/admin" : "/";

                  setTimeout(() => {
                    window.location.href = redirectUrl;
                  }, 800);
                } else {
                  showServerMessage(data.message, "error");

                  if (data.message.includes("chưa được xác thực")) {
                    const $resendButton = $("<button>")
                      .text("Gửi lại email xác thực")
                      .addClass(
                        "mt-3 inline-block px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition"
                      )
                      .on("click", function () {
                        resendVerificationEmail(email);
                      });

                    $serverMessage.append("<br>", $resendButton);
                  }

                  if (data.message.includes("bị khóa")) {
                    const $supportButton = $("<button>")
                      .text("Liên hệ quản trị viên")
                      .addClass(
                        "mt-3 inline-block px-4 py-2 border border-red-300 text-red-700 rounded-lg hover:bg-red-50 transition"
                      )
                      .on("click", function () {
                        window.location.href = "/support";
                      });

                    $serverMessage.append("<br>", $supportButton);
                  }
                }
              },
              error: function () {
                showServerMessage("Đã xảy ra lỗi, vui lòng thử lại", "error");
              },
              complete: function () {
                $submitBtn.prop("disabled", false).text("Đăng nhập");
              },
            });
          }
        });
        function resendVerificationEmail(emailToResend) {
          clearServerMessage();

          $.ajax({
            url: "/auth/resend-verification",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify({
              email: emailToResend,
            }),
            dataType: "json",
            success: function (data) {
              if (data.success) {
                showServerMessage(
                  data.message + ". Vui lòng kiểm tra email của bạn.",
                  "success"
                );
              } else {
                showServerMessage(data.message, "error");
              }
            },
            error: function (err) {
              console.error("Lỗi gửi lại email:", err);
              showServerMessage("Đã xảy ra lỗi khi gửi lại email", "error");
            },
          });
        }
      });
    </script>
  </body>
</html>

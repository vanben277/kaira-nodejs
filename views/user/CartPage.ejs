<!DOCTYPE html>
<html lang="en">

<head>
    <title>Giỏ hàng</title>
    <%- include('../partials/user/Head') %>
</head>

<body class="bg-white text-gray-800">
    <%- include('../partials/user/SVGIcon') %> <%- include('../partials/user/Search') %> <%-
                include('../partials/user/Header') %>
                <% if (cartItems.length===0) { %>
                    <!-- Empty Cart -->
                    <div class="container mx-auto px-4 py-16 text-center">
                        <svg class="w-24 h-24 mx-auto text-gray-300">
                            <use href="#shopping-bag"></use>
                        </svg>
                        <h1 class="text-3xl font-marcellus mt-6">Your Cart is Empty</h1>
                        <p class="text-gray-600 mt-2">
                            Looks like you haven't added anything to your cart yet.
                        </p>
                        <a href="/"
                            class="mt-6 inline-block bg-gray-900 text-white px-8 py-3 uppercase text-sm font-semibold rounded hover:bg-gray-800 transition-colors">
                            Start Shopping
                        </a>
                    </div>
                    <% } else { %>
                        <!-- Cart with Items -->
                        <div class="bg-gray-50">
                            <div class="container mx-auto px-4 py-12 md:py-16">
                                <h1 class="text-3xl md:text-4xl font-marcellus text-center mb-8">
                                    Your Shopping Cart
                                </h1>

                                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                                    <!-- Cart Items -->
                                    <div class="lg:col-span-2 bg-white p-6 rounded-lg shadow-md">
                                        <ul role="list" class="divide-y divide-gray-200">
                                            <% cartItems.forEach(item=> { %>
                                                <li class="flex py-6" data-product-id="<%= item.product.id %>">
                                                    <!-- Product Image -->
                                                    <div
                                                        class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-gray-200">
                                                        <img src="https://picsum.photos/seed/<%= item.product.id %>/200/200"
                                                            alt="<%= item.product.name %>"
                                                            class="h-full w-full object-cover object-center" />
                                                    </div>

                                                    <!-- Product Info -->
                                                    <div class="ml-4 flex flex-1 flex-col">
                                                        <div>
                                                            <div
                                                                class="flex justify-between text-base font-medium text-gray-900">
                                                                <h6 style="margin: 0">
                                                                    <a href="/product/<%= item.product.id %>">
                                                                        <%= item.product.name %>
                                                                    </a>
                                                                </h6>
                                                                <p class="ml-4" style="margin: 0">
                                                                    $<%= (item.product.price * item.quantity).toFixed(2)
                                                                        %>
                                                                </p>
                                                            </div>
                                                            <p class="mt-1 text-sm text-gray-500"
                                                                style="margin:0 !important">
                                                                <%= item.product.category %>
                                                            </p>
                                                        </div>

                                                        <!-- Quantity Controls -->
                                                        <div class="flex flex-1 items-end justify-between text-sm">
                                                            <div class="flex items-center border rounded">
                                                                <button style="background:white; border:none"
                                                                    onclick="updateQuantity('<%= item.product.id %>', <%= item.quantity - 1 %>)"
                                                                    class="px-3 py-1 text-gray-600 hover:bg-gray-100"
                                                                    <%=item.quantity <=1 ? 'disabled' : '' %>
                                                                    >
                                                                    <svg class="w-4 h-4">
                                                                        <use href="#minus"></use>
                                                                    </svg>
                                                                </button>
                                                                <span class="px-3 py-1 font-semibold">
                                                                    <%= item.quantity %>
                                                                </span>
                                                                <button style="background:white; border:none"
                                                                    onclick="updateQuantity('<%= item.product.id %>', <%= item.quantity + 1 %>)"
                                                                    class="px-3 py-1 text-gray-600 hover:bg-gray-100">
                                                                    <svg class="w-4 h-4">
                                                                        <use href="#plus"></use>
                                                                    </svg>
                                                                </button>
                                                            </div>

                                                            <div class="flex">
                                                                <button type="button"
                                                                    style="background:white; border:none"
                                                                    onclick="removeFromCart('<%= item.product.id %>')"
                                                                    class="font-medium text-red-600 hover:text-red-500 flex items-center">
                                                                    <svg class="w-4 h-4 mr-1">
                                                                        <use href="#trash"></use>
                                                                    </svg>
                                                                    Remove
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </div>

                                    <!-- Order Summary -->
                                    <div class="lg:col-span-1">
                                        <div class="bg-white p-6 rounded-lg shadow-md">
                                            <h2 class="text-lg font-medium text-gray-900 border-b pb-4">
                                                Order summary
                                            </h2>
                                            <div class="mt-6 space-y-4">
                                                <div class="flex items-center justify-between">
                                                    <dt class="text-sm text-gray-600">Subtotal</dt>
                                                    <dd class="text-sm font-medium text-gray-900">
                                                        $<%= cartTotal.toFixed(2) %>
                                                    </dd>
                                                </div>
                                                <div class="flex items-center justify-between">
                                                    <dt class="text-sm text-gray-600">Shipping estimate</dt>
                                                    <dd class="text-sm font-medium text-gray-900">$5.00</dd>
                                                </div>
                                                <div
                                                    class="flex items-center justify-between border-t border-gray-200 pt-4">
                                                    <dt class="text-base font-medium text-gray-900">
                                                        Order total
                                                    </dt>
                                                    <dd class="text-base font-medium text-gray-900">
                                                        $<%= (cartTotal + 5).toFixed(2) %>
                                                    </dd>
                                                </div>
                                            </div>
                                            <div class="mt-6">
                                                <a href="/checkout"
                                                    class="w-full flex items-center justify-center rounded-md border border-transparent bg-gray-900 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-gray-800 uppercase">
                                                    Checkout
                                                </a>
                                            </div>
                                            <div class="mt-6 flex justify-center text-center text-sm text-gray-500">
                                                <p>
                                                    or
                                                    <a href="/" class="font-medium text-gray-600 hover:text-gray-900">
                                                        Continue Shopping
                                                    </a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %> <%- include('../partials/user/Footer') %> <%- include('../partials/user/Script') %>

                                    <script>
                                        // Update quantity function
                                        function updateQuantity(productId, newQuantity) {
                                            if (newQuantity < 1) return;

                                            fetch("/cart/update", {
                                                method: "POST",
                                                headers: {
                                                    "Content-Type": "application/json",
                                                },
                                                body: JSON.stringify({
                                                    productId: productId,
                                                    quantity: newQuantity,
                                                }),
                                            })
                                                .then((response) => response.json())
                                                .then((data) => {
                                                    if (data.success) {
                                                        location.reload();
                                                    }
                                                })
                                                .catch((error) => console.error("Error:", error));
                                        }

                                        // Remove from cart function
                                        function removeFromCart(productId) {
                                            if (!confirm("Are you sure you want to remove this item?")) return;

                                            fetch("/cart/remove", {
                                                method: "POST",
                                                headers: {
                                                    "Content-Type": "application/json",
                                                },
                                                body: JSON.stringify({
                                                    productId: productId,
                                                }),
                                            })
                                                .then((response) => response.json())
                                                .then((data) => {
                                                    if (data.success) {
                                                        location.reload();
                                                    }
                                                })
                                                .catch((error) => console.error("Error:", error));
                                        }
                                    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="vi">
  <head>
    <title>Chi tiết sản phẩm</title>
    <%- include('../partials/user/Head') %>
    <style>
      .variant-btn.active {
        border-color: #111827;
        background-color: #f3f4f6;
      }
      .color-btn.active {
        ring: 2px;
        ring-offset: 2px;
        ring-color: #111827;
      }
      .disabled-option {
        opacity: 0.5;
        pointer-events: none;
        text-decoration: line-through;
      }
    </style>
  </head>

  <body class="bg-white text-gray-800">
    <%- include('../partials/user/SVGIcon') %> <%-
    include('../partials/user/Search') %> <%- include('../partials/user/Header')
    %>

    <div id="loading-spinner" class="flex justify-center items-center h-screen">
      <div
        class="animate-spin rounded-full h-16 w-16 border-t-2 border-b-2 border-gray-900"
      ></div>
    </div>

    <!-- Main Content (Ẩn đi cho đến khi có dữ liệu) -->
    <div id="product-content" class="bg-white hidden">
      <div class="container mx-auto px-4 py-12 md:py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
          <!-- 1. Product Image Gallery -->
          <div class="w-full">
            <!-- Ảnh chính -->
            <div
              class="aspect-w-1 aspect-h-1 bg-gray-100 rounded-lg overflow-hidden relative mb-4"
            >
              <img
                id="main-image"
                src=""
                alt="Product Image"
                class="w-full h-full object-cover object-center"
              />
            </div>
            <!-- Ảnh nhỏ (Thumbnails) -->
            <div id="image-gallery" class="flex gap-2 overflow-x-auto pb-2">
              <!-- JS sẽ chèn ảnh nhỏ vào đây -->
            </div>
          </div>

          <!-- 2. Product Info -->
          <div class="flex flex-col justify-center">
            <h2
              id="product-category"
              class="text-sm uppercase text-gray-500 tracking-widest"
            >
              <!-- Category Name -->
            </h2>

            <h1
              id="product-name"
              class="text-3xl md:text-4xl font-marcellus text-gray-900 mt-2"
            >
              <!-- Product Name -->
            </h1>

            <!-- Giá tiền -->
            <p id="product-price" class="text-3xl text-gray-900 mt-4 font-bold">
              <!-- Price here -->
            </p>

            <!-- Mô tả -->
            <div
              id="product-description"
              class="mt-6 text-gray-600 leading-relaxed whitespace-pre-line"
            >
              <!-- Description here -->
            </div>

            <!-- === PHẦN BIẾN THỂ (VARIANTS) === -->
            <div id="variants-section" class="mt-8 hidden">
              <!-- Chọn Màu -->
              <div class="mb-4">
                <span class="text-sm font-semibold text-gray-700"
                  >Màu sắc:</span
                >
                <div id="color-options" class="flex gap-3 mt-2">
                  <!-- JS render màu -->
                </div>
              </div>

              <!-- Chọn Size -->
              <div class="mb-4">
                <span class="text-sm font-semibold text-gray-700"
                  >Kích thước:</span
                >
                <div id="size-options" class="flex gap-2 mt-2">
                  <!-- JS render size -->
                </div>
              </div>
            </div>

            <!-- Số lượng tồn kho (Optional) -->
            <p id="stock-status" class="mt-2 text-sm text-gray-500"></p>

            <!-- Form Add to Cart -->
            <form
              id="add-to-cart-form"
              class="mt-8 flex items-center space-x-4"
            >
              <input type="hidden" id="input-product-id" name="productId" />
              <input type="hidden" id="input-variant-id" name="variantId" />
              <!-- ID size cụ thể -->

              <div class="flex items-center border rounded border-gray-300">
                <button
                  type="button"
                  class="px-4 py-2 text-gray-600 border-none bg-[#fff] hover:bg-gray-100 qty-minus"
                >
                  -
                </button>
                <input
                  type="number"
                  id="input-quantity"
                  name="quantity"
                  value="1"
                  min="1"
                  class="w-16 text-center font-semibold border-none outline-none appearance-none"
                />
                <button
                  type="button"
                  class="px-4 py-2 text-gray-600 border-none bg-[#fff] hover:bg-gray-100 qty-plus"
                >
                  +
                </button>
              </div>

              <button
                type="submit"
                id="btn-add-to-cart"
                class="flex-1 px-8 py-3 bg-gray-900 text-white uppercase text-sm font-semibold rounded hover:bg-gray-700 transition duration-300"
              >
                Thêm vào giỏ
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/user/Footer') %> <%-
    include('../partials/user/Script') %>

    <script src="/js/product_details.js"></script>
  </body>
</html>
